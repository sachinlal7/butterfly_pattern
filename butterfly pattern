#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
    int i,j,k=0,n;
    scanf("%d",&n);
    for(i=1;i<=n;i++)
    
    {
        i<=(n+1)/2 ? k++ : k--;
        for(j=1;j<=n;j++)
        {
            if(j<=k || j>=n+1-k)
            printf("*");
            else 
            printf(" ");
        }
        printf("\n");
    }


    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
